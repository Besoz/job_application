<div class="page-header">
  <%= link_to new_interview_type_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Interview type
  <% end %>
  <h1>Listing interview_types</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Duration</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @interview_types) do |interview_type| %>
            <td><%= interview_type.name %></td>
            <td><%= interview_type.description %></td>
            <td><%= interview_type.duration %></td>
            <td><%= link_to 'Show', interview_type %></td>
        <td><%= link_to 'Edit', edit_interview_type_path(interview_type) %></td>
        <td><%= link_to 'Destroy', interview_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
