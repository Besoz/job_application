<div class="page-header">
  <%= link_to applicants_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_applicant_path(@applicant), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show applicant</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @applicant.name %></dd>

  <dt>Email:</dt>
  <dd><%= @applicant.email %></dd>
  <dt>Applications:</dt>
</dl>
  <%= render partial: '/applications/applications_list',
  formats: :html,
  handlers: :erb,
  locals: {applications_list: @applicant.applications} %>