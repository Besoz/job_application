<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Score</th>
            <th>Application</th>
            <th>Interview type</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, interviews_list) do |interview_event| %>
            <td><%= interview_event.score %></td>
            <td><%= interview_event.application_id %></td>
            <td><%= interview_event.interview_type_id %></td>
            <td><%= link_to 'Show', interview_event %></td>
        <td><%= link_to 'Edit', edit_interview_event_path(interview_event) %></td>
        <td><%= link_to 'Destroy', interview_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
